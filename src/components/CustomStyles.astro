---
import "@fontsource-variable/playfair-display";
import "@fontsource-variable/inter";
---

<style is:inline>
  :root {
    --aw-font-sans: "Inter Variable";
    --aw-font-serif: "Inter Variable";
    --aw-font-heading: "Playfair Display Variable", serif;

    --aw-color-primary: rgb(199 162 110); /* Dorado ceremonial */
    --aw-color-secondary: rgb(160 138 85); /* Dorado ceremonial profundo */
    --aw-color-accent: rgb(199 162 110); /* Dorado ceremonial */

    --aw-color-text-heading: rgb(18 18 18);
    --aw-color-text-default: rgb(32 32 32);
    --aw-color-text-muted: rgb(32 32 32 / 65%);

    /* FONDO LIGHT (gradiente) */
    --aw-color-bg-page: rgb(250 250 249);

    ::selection {
      background-color: rgb(199 162 110);
      color: rgb(18 56 73);
    }
  }

  .dark {
    --aw-font-sans: "Inter Variable";
    --aw-font-serif: "Inter Variable";
    --aw-font-heading: "Playfair Display Variable", serif;

    --aw-color-primary: rgb(199 162 110); /* Dorado como CTA */
    --aw-color-secondary: rgb(160 138 85);
    --aw-color-accent: rgb(199 173 110);

    --aw-color-text-heading: rgb(247 248 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);

    /* FONDO DARK (gradiente) */
    --aw-color-bg-page: linear-gradient(
      to bottom,
      rgb(18 59 73) 0%,
      rgb(24 72 92) 45%,
      rgb(10 30 38) 100%
    );

    ::selection {
      background-color: rgb(199 173 110);
      color: rgb(10 30 38);
    }
  }

  /* CLAVE: aplicar gradiente al html */
  html {
    background: var(--aw-color-bg-page);
  }

  /* Evitar que body lo pise */
  body {
    background: transparent;
  }

  .font-heading {
    letter-spacing: 0.015em;
  }
</style>
